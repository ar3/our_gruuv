- participant = @participant_by_huddle_id && @participant_by_huddle_id[huddle.id]
- existing_feedback = @feedback_by_huddle_id && @feedback_by_huddle_id[huddle.id]
.col-md-6.col-lg-4.mb-3
  .card.h-100
    .card-body.position-relative
      .position-absolute.top-0.end-0.p-2
        .dropdown
          %button.btn.btn-link.btn-sm.text-muted.dropdown-toggle{data: {bs_toggle: "dropdown"}, title: "Share this huddle"}
            %i.bi.bi-link-45deg
          %ul.dropdown-menu
            %li
              %button.btn.btn-link.dropdown-item.share-huddle-btn{data: {huddle_id: huddle.id, join_url: join_huddle_url(huddle), type: "join"}}
                %i.bi.bi-people.me-2
                Share Join Link
            %li
              %button.btn.btn-link.dropdown-item.share-huddle-btn{data: {huddle_id: huddle.id, join_url: direct_feedback_huddle_url(huddle), type: "feedback"}}
                %i.bi.bi-star.me-2
                Share Feedback Link
      %h5.card-title{data: {bs_toggle: "tooltip", bs_placement: "top"}, title: "Started at #{format_time_in_user_timezone(huddle.started_at)}"}
        = huddle.display_name_without_organization
      %p.card-text
        %strong
          Team:
        = huddle.company&.display_name || 'Unknown Company'
      %p.card-text
        - if participant
          = content_tag :span, participant.role.titleize, class: "badge bg-secondary ms-2"
        &nbsp;

      .row
        .col-6
          %p.card-text
            %strong Overall Rating:
            - if huddle.nat_20_score
              = nat_20_badge(huddle.nat_20_score)
            - else
              %span.badge.bg-light.text-muted --
        .col-6
          %p.card-text
            %strong Feedback:
            = feedback_participation_badge(huddle.huddle_feedbacks.size, huddle.huddle_participants.size)
      
      .mt-3
        - if participant
          - if existing_feedback
            .btn-group.w-100
              = link_to "View Huddle", huddle_path(huddle), class: "btn btn-outline-primary btn-sm"
              - if huddle.slack_announcement_url
                = link_to huddle.slack_announcement_url, target: "_blank", class: "btn btn-outline-success btn-sm", title: "View Slack Thread" do
                  %i.bi.bi-slack.me-1
                  Slack ðŸ§µ
          - else
            .btn-group.w-100
              = link_to "View Huddle", huddle_path(huddle), class: "btn btn-outline-primary btn-sm"
              = link_to "Submit Feedback", feedback_huddle_path(huddle), class: "btn btn-success btn-sm"
        - else
          = link_to "Join Huddle", join_huddle_path(huddle), class: "btn btn-outline-primary btn-sm w-100" 
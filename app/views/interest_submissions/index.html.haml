- content_for :title, "Interest Submissions"

- content_for :header do
  %h1.mb-0
    %i.bi.bi-heart.me-2
    Interest Submissions
  %small.text-muted User feedback on coming soon features

.card
  .card-header
    %h5.mb-0
      %i.bi.bi-list-ul.me-2
      All Submissions
    %small.text-muted= "#{@interest_submissions.count} total submissions"
  
  .card-body
    - if @interest_submissions.any?
      .table-responsive
        %table.table.table-hover
          %thead
            %tr
              %th Date
              %th Person
              %th Source Page
              %th Has Content?
              %th Actions
          %tbody
            - @interest_submissions.each do |submission|
              %tr
                %td
                  = submission.created_at.strftime("%m/%d/%Y")
                  %br
                  %small.text-muted= submission.created_at.strftime("%I:%M %p")
                %td= submission.person.display_name
                %td
                  %span.badge.bg-primary= submission.source_page.humanize
                %td
                  - if submission.has_content?
                    %span.badge.bg-success Yes
                  - else
                    %span.badge.bg-secondary No
                %td
                  = link_to "View", submission, class: "btn btn-sm btn-outline-primary"
    - else
      .text-center.py-5
        %i.bi.bi-heart.text-muted{style: "font-size: 3rem;"}
        %h5.text-muted.mt-3 No Interest Submissions Yet
        %p.text-muted No one has submitted interest in coming soon features yet.

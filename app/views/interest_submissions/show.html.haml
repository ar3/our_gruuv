- content_for :title, "Thank You!"

- content_for :header do
  %h1.mb-0
    %i.bi.bi-check-circle.text-success.me-2
    Thank You!

.card
  .card-header.bg-success.text-white
    %h5.mb-0
      %i.bi.bi-heart.me-2
      Interest Submitted Successfully
    %small Your feedback helps us build better features for OurGruuv
  
  .card-body
    .row
      .col-md-8
        %h6.text-primary
          %i.bi.bi-file-text.me-2
          Your Submission
        .mb-3
          %strong Source Page:
          %span.ms-2= @interest_submission.source_page.humanize
        .mb-3
          %strong Submitted By:
          %span.ms-2= @interest_submission.person.display_name
        .mb-3
          %strong Submitted On:
          %span.ms-2= @interest_submission.created_at.strftime("%B %d, %Y at %I:%M %p")
        
        - if @interest_submission.has_content?
          %hr
          - if @interest_submission.thing_interested_in.present?
            .mb-3
              %strong What you're interested in:
              %p.mt-1.text-muted= @interest_submission.thing_interested_in
          
          - if @interest_submission.why_interested.present?
            .mb-3
              %strong Why you're interested:
              %p.mt-1.text-muted= @interest_submission.why_interested
          
          - if @interest_submission.current_solution.present?
            .mb-3
              %strong Your current solution:
              %p.mt-1.text-muted= @interest_submission.current_solution
        - else
          %p.text-muted You submitted an interest without additional details. That's perfectly fine!
      
      .col-md-4
        .card.bg-light
          .card-body
            %h6.text-primary
              %i.bi.bi-info-circle.me-2
              What Happens Next?
            %p.small We review all interest submissions to help prioritize our development roadmap.
            
            %hr
            
            %h6.text-success
              %i.bi.bi-people.me-2
              Stay Updated
            %p.small We'll keep you informed about progress on features you're interested in.
    
    .mt-4
      .d-flex.justify-content-between
        = link_to "Submit Another Interest", new_interest_submission_path(source_page: @interest_submission.source_page), class: "btn btn-outline-primary"
        = link_to "Back to Dashboard", root_path, class: "btn btn-primary"

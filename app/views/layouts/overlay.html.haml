!!!
%html
  %head
    = render partial: 'layouts/head_common', locals: { title_default: "OurGruuv" }

  %body.overlay-layout
    - has_return = content_for(:return_url).present? || content_for(:return_text).present?
    - return_url = content_for(:return_url) || "#"
    - return_text = content_for(:return_text) || "Back"
    .container.mt-4.overlay-content
      .row.mb-1
        .col-12
          .overlay-header.d-flex.justify-content-between.align-items-center
            .flex-grow-1
              %h1.mb-0
                = content_for(:header) || "Return to Previous Page"
      - if has_return
        .row.mb-3
          .col-12
            = link_to return_url, class: "text-muted", id: "return-button" do
              %i.bi.bi-arrow-left.me-1
              = return_text
      
      .row.overlay-body
        .col-12
          = yield

    - if notice
      .toast-container.position-fixed.top-0.end-0.p-3{style: "z-index: 1055;"}
        .toast.align-items-center.text-white.bg-success.border-0{role: "alert", "aria-live": "assertive", "aria-atomic": "true", "data-bs-autohide": "true", "data-bs-delay": "5000"}
          .d-flex
            .toast-body
              %i.bi.bi-check-circle.me-2
              = notice
            %button.btn-close.btn-close-white.me-2.m-auto{type: "button", "data-bs-dismiss": "toast", "aria-label": "Close"}
    
    - if alert
      .toast-container.position-fixed.top-0.end-0.p-3{style: "z-index: 1055;"}
        .toast.align-items-center.text-white.bg-danger.border-0{role: "alert", "aria-live": "assertive", "aria-atomic": "true", "data-bs-autohide": "true", "data-bs-delay": "5000"}
          .d-flex
            .toast-body
              %i.bi.bi-exclamation-triangle.me-2
              = alert
            %button.btn-close.btn-close-white.me-2.m-auto{type: "button", "data-bs-dismiss": "toast", "aria-label": "Close"}


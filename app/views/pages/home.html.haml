          / Job Category 3
          .job-category
            .category-header
              %h3.category-title Transform
              %p.category-subtitle [Category description and value proposition]
            .solutions-grid
              .solution-card
                %h4.solution-title Scorecard of Signals
                %p.solution-description [Tagline and brief description of this specific solution]
              .solution-card
                %h4.solution-title OKR-3's
                %p.solution-description [Tagline and brief description of this specific solution]
              .solution-card
                %h4.solution-title Forest of Hypotheses
                %p.solution-description [Tagline and brief description of this specific solution]

    / Footer
    %footer.footer
      .container
        %p
          &copy;
          =" 2018-#{Time.current.year} OurGruuv. All rights reserved. "
.card.mb-4{ role: "region", "aria-labelledby": "page-visits-section" }
  .card-header
    %h5.mb-0{ id: "page-visits-section" }
      %i.bi.bi-clock-history.me-2
      Page Visits
  .card-body
    .row
      .col-12.col-md-6.mb-4.mb-md-0
        %h6.mb-3
          %i.bi.bi-star-fill.me-2
          Top 5 Most Visited Pages
        - if @most_visited_pages.any?
          .table-responsive
            %table.table.table-sm.table-hover
              %thead
                %tr
                  %th Page
                  %th.text-end Visits
                  %th.text-end Last Visited
              %tbody
                - @most_visited_pages.each do |page_visit|
                  %tr
                    %td
                      = link_to page_visit.page_title.presence || page_visit.url, page_visit.url, class: "text-decoration-none"
                    %td.text-end= page_visit.visit_count
                    %td.text-end
                      - if page_visit.visited_at
                        %small.text-muted= time_ago_in_words(page_visit.visited_at) + " ago"
        - else
          %p.text-muted No page visits recorded yet.

      .col-12.col-md-6
        %h6.mb-3
          %i.bi.bi-clock.me-2
          Top 5 Most Recent Pages
        - if @most_recent_pages.any?
          .table-responsive
            %table.table.table-sm.table-hover
              %thead
                %tr
                  %th Page
                  %th.text-end Visits
                  %th.text-end Last Visited
              %tbody
                - @most_recent_pages.each do |page_visit|
                  %tr
                    %td
                      = link_to page_visit.page_title.presence || page_visit.url, page_visit.url, class: "text-decoration-none"
                    %td.text-end= page_visit.visit_count
                    %td.text-end
                      - if page_visit.visited_at
                        %small.text-muted= time_ago_in_words(page_visit.visited_at) + " ago"
        - else
          %p.text-muted No page visits recorded yet.


- content_for :header do
  %h1.mb-0{id: "person-title"}
  - if @person == @current_person
    My Profile
  - else
    = @person.display_name
        
- content_for :header_action do
  = render 'view_switcher'

- content_for :go_back_link do
  = link_to organization_employees_path(current_organization), class: "go-back-link" do
    %i.bi.bi-arrow-left.me-2
    ="Back to Teammates in #{current_organization.display_name}"

/ About Me Section
.row
  .col-12
    = render 'people/show/about_me'

/ Security & Permissions Section
.row
  .col-12  
    = render 'people/show/identities'

/ Organization Permissions Section
.row
  .col-12
    = render 'people/show/permissions'

/ Align Section
.row.mb-4
  .col-12
    = render 'people/show/align'

/ Transform Section
.row.mb-4
  .col-12
    = render 'people/show/transform'

= render 'people/show/footer'

- content_for :javascript do
  :javascript
    console.log('=== Assignment Tenures JavaScript Loading ===');
    
    document.addEventListener('DOMContentLoaded', function() {
      console.log('=== DOM Content Loaded ===');
      // Handle completion toggles
      document.querySelectorAll('.completion-toggle').forEach(function(toggle) {
        toggle.addEventListener('change', function() {
          const targetId = this.dataset.target;
          const targetFields = document.getElementById(targetId);
          
          if (targetFields) {
            const inputs = targetFields.querySelectorAll('input, select, textarea');
            inputs.forEach(function(input) {
              input.disabled = this.checked;
            }.bind(this));
            
            // Update visual state
            if (this.checked) {
              targetFields.classList.add('disabled');
            } else {
              targetFields.classList.remove('disabled');
            }
          } else {
            // For table layout, disable fields in the same row
            const row = this.closest('tr');
            if (row) {
              const inputs = row.querySelectorAll('input, select, textarea');
              inputs.forEach(function(input) {
                if (input !== this) { // Don't disable the toggle itself
                  input.disabled = this.checked;
                }
              }.bind(this));
            }
          }
        });
      });

      // Energy percentage validation
      function calculateEnergyTotal() {
        console.log('=== calculateEnergyTotal called ===');
        
        const energySelects = document.querySelectorAll('.energy-select');
        console.log('Found energy selects:', energySelects.length);
        
        let total = 0;
        
        energySelects.forEach(function(select, index) {
          const value = parseInt(select.value) || 0;
          console.log(`Select ${index}: value="${select.value}", parsed=${value}`);
          total += value;
        });
        
        console.log('Total calculated:', total);
        
        // Update both top and bottom energy totals
        const totalElements = document.querySelectorAll('#energy-total-top, #energy-total-bottom');
        const statusElements = document.querySelectorAll('#energy-status-top, #energy-status-bottom');
        const alertElements = document.querySelectorAll('.energy-total');
        
        console.log('Found total elements:', totalElements.length);
        console.log('Found status elements:', statusElements.length);
        console.log('Found alert elements:', alertElements.length);
        
        totalElements.forEach(function(element, index) {
          console.log(`Updating total element ${index}:`, element);
          element.textContent = total + '%';
        });
        
        alertElements.forEach(function(alertElement, index) {
          const statusElement = statusElements[index];
          console.log(`Updating alert element ${index}:`, alertElement);
          console.log(`Status element ${index}:`, statusElement);
          
          if (statusElement) {
            // Remove existing status classes
            alertElement.classList.remove('alert-success', 'alert-warning', 'alert-danger');
            statusElement.innerHTML = '';
            
            if (total === 100) {
              alertElement.classList.add('alert-success');
              statusElement.innerHTML = ' <i class="bi bi-check-circle"></i>';
            } else if (total > 100) {
              alertElement.classList.add('alert-danger');
              statusElement.innerHTML = ' <i class="bi bi-exclamation-triangle"></i>';
            } else if (total < 100) {
              alertElement.classList.add('alert-warning');
              statusElement.innerHTML = ' <i class="bi bi-info-circle"></i>';
            }
          }
        });
        
        console.log('=== calculateEnergyTotal completed ===');
      }
      
      // Add event listeners to energy selects
      document.querySelectorAll('.energy-select').forEach(function(select, index) {
        console.log(`Adding event listener to energy select ${index}:`, select);
        select.addEventListener('change', function() {
          console.log(`Energy select ${index} changed to:`, this.value);
          calculateEnergyTotal();
        });
      });
      
      // Calculate initial total
      console.log('Calculating initial energy total...');
      calculateEnergyTotal();
    });

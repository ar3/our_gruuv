.container-fluid.py-4
  .row
    .col-12
      %h1.mb-4 Dashboard
      %p.text-muted Welcome to your Our Gruuv dashboard!
  
  .row
    .col-md-6
      .card.mb-4
        .card-header
          %h5.card-title.mb-0 Recent Huddles
        .card-body
          - if @recent_huddles.any?
            - @recent_huddles.each do |huddle|
              .d-flex.justify-content-between.align-items-center.mb-2
                %div
                  %strong= huddle.organization.display_name
                  %br
                  %small.text-muted= huddle.started_at.strftime('%B %d, %Y')
                = link_to "View", huddle_path(huddle), class: "btn btn-sm btn-outline-primary"
          - else
            %p.text-muted No recent huddles found.
            = link_to "Create a Huddle", new_huddle_path, class: "btn btn-primary"
    
    .col-md-6
      .card.mb-4
        .card-header
          %h5.card-title.mb-0 Your Organizations
        .card-body
          - if @organizations.any?
            - @organizations.each do |org|
              .d-flex.justify-content-between.align-items-center.mb-2
                %div
                  %strong= org.display_name
                  %br
                  %small.text-muted= org.type.titleize
                = link_to "View", organization_path(org), class: "btn btn-sm btn-outline-secondary"
          - else
            %p.text-muted No organizations found.
            = link_to "Manage Organizations", organizations_path, class: "btn btn-secondary"

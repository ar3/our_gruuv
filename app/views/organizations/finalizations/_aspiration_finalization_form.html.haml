.card.mb-4
  .card-header
    %h3 Aspiration Check-Ins
    = check_box_tag 'finalize_aspirations', '1', true
    = label_tag 'finalize_aspirations', 'Finalize Aspirations'
  
  .card-body
    - aspiration_check_ins.each do |check_in|
      .aspiration-finalization.mb-4.p-3.border.rounded
        %h5= check_in.aspiration.name
        
        .row
          .col-md-6
            .card.border-primary
              .card-header.bg-primary.text-white
                %h6.mb-0 Employee Perspective
              .card-body
                = render 'shared/check_ins_and_finalizations/aspiration_employee_perspective', check_in: check_in
          
          .col-md-6
            .card.border-info
              .card-header.bg-info.text-white
                %h6.mb-0 Manager Perspective
              .card-body
                = render 'shared/check_ins_and_finalizations/aspiration_manager_perspective', check_in: check_in
        
        .row.mt-3
          .col-md-6
            .form-group
              = label_tag "aspiration_check_ins[#{check_in.id}][aspiration_id]", "Aspiration ID", class: 'sr-only'
              = hidden_field_tag "aspiration_check_ins[#{check_in.id}][aspiration_id]", check_in.aspiration.id
              
              = label_tag "aspiration_check_ins[#{check_in.id}][official_rating]", "Official Rating"
              = select_tag "aspiration_check_ins[#{check_in.id}][official_rating]",
                          options_for_select(aspiration_rating_options, check_in.manager_rating),
                          class: 'form-control'
          
          .col-md-6
            .form-group
              = label_tag "aspiration_check_ins[#{check_in.id}][shared_notes]", "Shared Notes"
              = text_area_tag "aspiration_check_ins[#{check_in.id}][shared_notes]", nil, 
                             rows: 2, class: 'form-control',
                             placeholder: 'Summary, action items, development plans...'

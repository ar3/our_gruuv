.d-flex.justify-content-between.align-items-center.mb-2
  %h1.mb-0{id: "page-title"}
    %i.bi.bi-lightning.me-2
    Edit #{@ability.name}
  .d-flex.align-items-center
    .btn-group
      = link_to organization_ability_path(@organization, @ability), class: "btn btn-info" do
        %i.bi.bi-eye.me-2
        View

.mb-4
  = link_to organization_ability_path(@organization, @ability), class: "text-muted text-decoration-none" do
    %i.bi.bi-arrow-left.me-2
    Back to #{@ability.name}

.card
  .card-header
    %h5.mb-0
      %i.bi.bi-lightning.me-2
      Edit #{@ability.name}
  .card-body
    = render 'form', form_url: organization_ability_path(@organization, @form.model), submit_button_text: "Update Ability", cancel_path: organization_ability_path(@organization, @ability), version_section_title: @ability_decorator.version_section_title_for_context, version_section_description: @ability_decorator.version_section_description_for_context, version_options: @ability_decorator.edit_version_options



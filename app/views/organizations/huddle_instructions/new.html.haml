.container
  .row.justify-content-center
    .col-md-8
      .card
        .card-header
          %h3.mb-0 New Huddle Instruction for #{@organization.display_name}
        .card-body
          = form_with model: [@organization, @huddle_instruction], local: true do |form|
            - if @huddle_instruction.errors.any?
              .alert.alert-danger
                %h5= "#{pluralize(@huddle_instruction.errors.count, "error")} prohibited this huddle instruction from being saved:"
                %ul.mb-0
                  - @huddle_instruction.errors.full_messages.each do |message|
                    %li= message
            
            .mb-3
              = form.label :instruction_alias, "Huddle Alias (optional)", class: "form-label"
              = form.text_field :instruction_alias, class: "form-control", placeholder: "e.g., Weekly Team Sync"
              .form-text Leave blank for unnamed huddles
            
            .mb-3
              = form.label :slack_channel, "Default Slack Channel (optional)", class: "form-label"
              = form.text_field :slack_channel, class: "form-control", placeholder: "#general"
              .form-text Leave blank to use organization's default channel
            
            .d-flex.justify-content-between
              = link_to "Cancel", organizations_path, class: "btn btn-secondary"
              = form.submit "Create Huddle Instruction", class: "btn btn-primary"

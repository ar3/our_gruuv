- content_for :go_back_link do
  = link_to organization_assignments_path(@organization), class: "go-back-link" do
    %i.bi.bi-arrow-left.me-2
    Back to Assignments

.row.justify-content-center
  .col-lg-8
    .card
      .card-header
        %h4.mb-0
          %i.bi.bi-briefcase.me-2
          Create New Assignment
      
      .card-body
        = form_with model: [@organization, @assignment], url: organization_assignments_path(@organization), local: true do |form|
          = render 'form', form: form
          
          .d-flex.justify-content-between
            = link_to "Cancel", organization_assignments_path(@organization), class: "btn btn-secondary"
            = form.submit "Create Assignment", class: "btn btn-primary"

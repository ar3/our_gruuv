- goal = node[:goal]
- children = node[:children] || []
- direct_children_count = node[:direct_children_count] || 0
- total_descendants_count = node[:total_descendants_count] || 0
- has_children = children.any?
- node_id = "goal-node-#{goal.id}"
- children_id = "goal-children-#{goal.id}"
- most_recent_check_in = node[:most_recent_check_in]
- current_week_check_in = node[:current_week_check_in]
- can_check_in = node[:can_check_in]
- current_week_start = Date.current.beginning_of_week(:monday)

.tree-node{id: node_id, style: "margin-left: #{depth * 40}px; margin-bottom: 10px;"}
  .d-flex.align-items-start
    - if depth > 0
      %i.bi.bi-arrow-return-right.me-2{style: "color: #999; margin-top: 12px;"}
    .card{style: "width: 100%; max-width: 820px; position: relative;", class: goal_warning_class(goal)}
      .card-body.p-2
        .d-flex.align-items-start
          .flex-shrink-0.me-3
            = goal_owner_image(goal, size: 48)
          .flex-grow-1
            / Header row with collapse button and counts
            - if has_children
              .d-flex.align-items-center.mb-2
                %button.btn.btn-sm.btn-link.p-0.me-2.toggle-children{type: "button", "data-bs-toggle": "collapse", "data-bs-target": "##{children_id}", "aria-expanded": "true", "aria-controls": children_id, style: "text-decoration: none; color: #666; min-width: 20px;"}
                  %i.bi.bi-chevron-down.toggle-icon
                %span.badge.bg-light.text-dark.small
                  - if direct_children_count == total_descendants_count
                    #{pluralize(direct_children_count, 'sub-goal')}
                  - else
                    #{pluralize(direct_children_count, 'sub-goal')} directly & #{total_descendants_count} total
            
            / Goal title (category/timeframe/status moved to info sentence below)
            .d-flex.align-items-center.flex-wrap.mb-1
              = link_to goal.title, organization_goal_path(@organization, goal), class: "text-decoration-none fw-bold me-2"
              - if goal.should_show_warning?
                %i.bi.bi-exclamation-triangle.text-warning{"data-bs-toggle" => "tooltip", "data-bs-title" => goal_warning_message(goal)}
            
            / Info sentence (status, goal type, due) then visibility and owner
            .d-flex.align-items-center.flex-wrap.mb-1
              %span.small.me-2
                = goal_index_info_sentence(goal)
              %span.small.me-2
                |
              %span.text-muted.small.me-2{"data-bs-toggle" => "tooltip", "data-bs-title" => goal_privacy_tooltip_text(goal)}
                = goal_visibility_display(goal)
              %span.text-muted.small
                | Owned by: #{goal_owner_display_name(goal)}
              - if goal.prompt_goals.any?
                = link_to " | #{goal_prompt_association_display(goal)}", edit_organization_prompt_path(@organization, goal.prompt_goals.first.prompt), target: '_blank', rel: 'noopener', class: 'text-muted small me-2 text-decoration-none'
            
            / Most recent check-in display
            - if most_recent_check_in.present?
              .small.text-muted.mb-2
                = render 'organizations/goals/goal_check_in_sentence', check_in: most_recent_check_in, goal: goal, short: true, use_casual_name: true
                = render 'shared/on_track_pill', status: goal.on_track_status_for_check_in(most_recent_check_in)
            
            / Inline check-in form: line 1 = "I'm [confidence] confident this'll be hit by [date]." [buttons]; line 2 = reason below sentence start
            - if can_check_in && goal.check_in_eligible? && goal.completed_at.nil?
              - can_update_goal = policy(goal).update?
              .check-in-inline.mt-1.p-1.bg-light.rounded
                = form_with url: check_in_organization_goal_path(@organization, goal), method: :post, local: true do |f|
                  = hidden_field_tag :return_url, request.fullpath
                  .d-flex.flex-wrap.align-items-center.gap-2
                    %span.small I'm
                    = select_tag :confidence_percentage, options_for_select(confidence_percentage_options, current_week_check_in&.confidence_percentage), { include_blank: 'Select...', class: 'form-select form-select-sm', style: 'width: auto; min-width: 80px; display: inline-block;' }
                    %span.small confident this'll be hit by
                    - if can_update_goal
                      = date_field_tag :most_likely_target_date, goal.most_likely_target_date, class: 'form-control form-control-sm', style: 'width: auto; min-width: 130px; display: inline-block;'
                    - else
                      %span.small= goal.most_likely_target_date.present? ? goal.most_likely_target_date.strftime('%b %d, %Y') : '—'
                    %span.small .
                    %button.btn.btn-primary.btn-sm{type: "submit"}
                      %i.bi.bi-check-lg
                      Check In
                    - if can_update_goal
                      %span.small.text-muted or
                      = link_to done_organization_goal_path(@organization, goal), class: "btn btn-success btn-sm", "data-bs-toggle" => "tooltip", "data-bs-title" => "mark this goal as done and log if it was hit or not" do
                        %i.bi.bi-check-circle
                  .mt-1
                    = text_field_tag :confidence_reason, current_week_check_in&.confidence_reason, class: 'form-control form-control-sm', style: 'max-width: 100%;', placeholder: 'Brief update (optional)...'
            - elsif !can_check_in && goal.check_in_eligible? && goal.completed_at.nil?
              .check-in-inline.mt-1.p-1.bg-light.rounded.opacity-75
                .d-flex.flex-wrap.align-items-center.gap-2
                  %span.small I'm
                  = select_tag "goal_check_in_disabled_#{goal.id}", options_for_select(confidence_percentage_options, current_week_check_in&.confidence_percentage), { include_blank: 'Select...', class: 'form-select form-select-sm', style: 'width: auto; min-width: 80px;', disabled: true }
                  %span.small confident this'll be hit by
                  %span.small= goal.most_likely_target_date.present? ? goal.most_likely_target_date.strftime('%b %d, %Y') : '—'
                  %span.small .
                  %span.btn.btn-primary.btn-sm.disabled
                    %i.bi.bi-check-lg.me-1
                    Check In
                  %i.bi.bi-exclamation-triangle.text-warning.ms-1{"data-bs-toggle" => "tooltip", "data-bs-title" => goal_no_check_in_access_tooltip(goal)}
                .mt-1
                  = text_field_tag "goal_check_in_reason_disabled_#{goal.id}", current_week_check_in&.confidence_reason, class: 'form-control form-control-sm', style: 'max-width: 100%;', placeholder: 'Brief update (optional)...', disabled: true
            - elsif goal.completed_at.nil?
              / Action buttons for non-check-in-eligible goals: only show View when Start is also shown (never show View alone)
              - show_start = goal.started_at.nil? && policy(goal).update?
              - if show_start
                .d-flex.gap-2.mt-2
                  = button_to start_organization_goal_path(@organization, goal), method: :patch, class: "btn btn-primary btn-sm", form: { style: "display: inline-block;" } do
                    %i.bi.bi-play-circle.me-1
                    Start
                  = link_to organization_goal_path(@organization, goal), class: "btn btn-outline-primary btn-sm" do
                    %i.bi.bi-eye.me-1
                    View

- if has_children
  .collapse.show{id: children_id}
    - children.each do |child_node|
      = render 'organizations/goals/customize_view/styles/goal_node', node: child_node, depth: depth + 1

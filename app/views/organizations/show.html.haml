.container.mt-4
  .row
    .col-12
      .d-flex.justify-content-between.align-items-center.mb-4
        %h1.mb-0{id: "organization-title"}= @organization.display_name
        .d-flex.align-items-center
          %span.badge.bg-primary.fs-6.me-3
            %i.bi.bi-building.me-1
            = @organization.type.underscore.humanize
          = link_to organizations_path, class: "btn btn-outline-secondary" do
            %i.bi.bi-arrow-left.me-2
            Back to Organizations
      
      .row
        .col-12
          .card.mb-4
            .card-header
              %h5.mb-0
                %i.bi.bi-info-circle.me-2
                Organization Details
            .card-body
              .row
                .col-md-6
                  %p
                    %strong Name:
                    = @organization.name
                  %p
                    %strong Type:
                    = @organization.type.underscore.humanize
                  - if @organization.parent
                    %p
                      %strong Parent:
                      = link_to @organization.parent.name, organization_path(@organization.parent)
                .col-md-6
                  %p
                    %strong Created:
                    = @organization.created_at.strftime("%B %d, %Y")
          - if @organization.company?
            .card.mb-4{ role: "region", "aria-labelledby": "organization-section" }
              .card-header
                %h5.mb-0{ id: "organization-section" }
                  %i.bi.bi-building.me-2
                  Organization
              .card-body
                .row
                  .col-md-8
                    .row.text-center
                      .col-6
                        .h4.text-primary= @total_employees
                        %small.text-muted Active Employees
                      .col-6
                        .h4.text-info= @total_potential_employees
                        %small.text-muted Potential Employees
                    .row.text-center.mt-3
                      .col-6
                        .h4.text-primary= @total_teams
                        %small.text-muted Teams
                      .col-6
                        .h4.text-primary= @total_departments
                        %small.text-muted Departments
                    .row.text-center.mt-3
                      .col-6
                        .h4.text-secondary= @organization.created_at.strftime("%b %Y")
                        %small.text-muted Created
                      .col-6
                        - if @organization.slack_configured?
                          .h4.text-success
                            %i.bi.bi-slack.me-1
                            Connected
                          %small.text-muted Slack Status
                        - else
                          .h4.text-warning
                            %i.bi.bi-slack.me-1
                            Not Connected
                          %small.text-muted Slack Status
                  .col-md-4.border-start.border-secondary
                    .d-grid.gap-2
                      = link_to new_organization_path(parent_id: @organization.id), class: "btn btn-primary" do
                        %i.bi.bi-plus-circle.me-2
                        Add Team/Department
                      - if current_person&.can_create_employment?(@organization)
                        = link_to organization_employment_management_index_path(@organization), class: "btn btn-success" do
                          %i.bi.bi-person-plus.me-2
                          Add Employee
                      - else
                        .d-flex.align-items-center.gap-2
                          .flex-grow-1
                            = link_to organization_employment_management_index_path(@organization), class: "btn btn-outline-secondary w-100", disabled: true do
                              %i.bi.bi-person-plus.me-2
                              Add Employee
                          %i.bi.bi-exclamation-triangle.text-warning{ data: { bs_toggle: "tooltip", bs_title: "Requires employment creation permission" } }

                      - if current_person&.can_manage_employment?(@organization)
                        = link_to organization_employment_management_index_path(@organization), class: "btn btn-outline-primary" do
                          %i.bi.bi-people-fill.me-2
                          Employment Management
                      - else
                        .d-flex.align-items-center.gap-2
                          .flex-grow-1
                            = link_to organization_employment_management_index_path(@organization), class: "btn btn-outline-secondary w-100", disabled: true do
                              %i.bi.bi-people-fill.me-2
                              Employment Management
                          %i.bi.bi-exclamation-triangle.text-warning{ data: { bs_toggle: "tooltip", bs_title: "Requires employment management permission" } }
                      
                      = link_to organization_employees_path(@organization), class: "btn btn-outline-primary" do
                        %i.bi.bi-people.me-2
                        View All Employees
                      
                      - if @organization.slack_configured?
                        = link_to organization_slack_path(@organization), class: "btn btn-outline-primary" do
                          %i.bi.bi-slack.me-2
                          Slack Settings
                      - else
                        = link_to oauth_authorize_organization_slack_path(@organization), class: "btn btn-outline-primary" do
                          %i.bi.bi-slack.me-2
                          Connect Slack
            
            .card.mb-4{ role: "region", "aria-labelledby": "align-section" }
              .card-header
                %h5.mb-0{ id: "align-section" }
                  %i.bi.bi-bullseye.me-2
                  Align
              .card-body
                .row
                  .col-md-8
                    .row.text-center
                      .col-6
                        .h4.text-primary= @total_positions
                        %small.text-muted Total Positions
                      .col-6
                        .h4.text-primary= @total_assignments
                        %small.text-muted Total Assignments
                  .col-md-4.border-start.border-secondary
                    .d-grid.gap-2
                      = link_to assignments_path, class: "btn btn-outline-primary" do
                        %i.bi.bi-list.me-2
                        View All Assignments
                      = link_to new_assignment_path, class: "btn btn-outline-primary" do
                        %i.bi.bi-plus-circle.me-2
                        Add New Assignment
                      = link_to positions_path, class: "btn btn-outline-primary" do
                        %i.bi.bi-list.me-2
                        View All Positions
                      = link_to new_position_path, class: "btn btn-outline-primary" do
                        %i.bi.bi-plus-circle.me-2
                        Add New Position
            
            .card.mb-4{ role: "region", "aria-labelledby": "collaborate-section" }
              .card-header
                %h5.mb-0{ id: "collaborate-section" }
                  %i.bi.bi-people.me-2
                  Collaborate
              .card-body
                .row
                  .col-md-8
                    .row.text-center
                      .col-6
                        .h4.text-primary= @active_huddles_this_week.count
                        %small.text-muted Active Huddles This Week
                      .col-6
                        .h4.text-primary= @total_participants_this_week
                        %small.text-muted Participants This Week
                    .row.text-center.mt-3
                      .col-12
                        .h4.text-info= @average_rating_this_week
                        %small.text-muted Average Rating This Week
                    .row.text-center.mt-3
                      .col-6
                        .h4.text-primary= @total_huddles_all_time
                        %small.text-muted Total Huddles All Time
                      .col-6
                        .h4.text-primary= @total_participants_all_time
                        %small.text-muted Total Participants All Time
                    .row.text-center.mt-3
                      .col-12
                        .h4.text-primary= @organization.huddle_playbooks.count
                        %small.text-muted Total Playbooks
                  .col-md-4.border-start.border-secondary
                    .d-grid.gap-2
                      = link_to organization_huddle_playbooks_path(@organization), class: "btn btn-outline-primary" do
                        %i.bi.bi-list.me-2
                        View All Playbooks
                      = link_to new_organization_huddle_playbook_path(@organization), class: "btn btn-outline-primary" do
                        %i.bi.bi-plus.me-2
                        Create Playbook
                      = link_to huddles_path(organization_id: @organization.id), class: "btn btn-outline-primary" do
                        %i.bi.bi-list.me-2
                        View All Huddles
                      = link_to new_huddle_path, class: "btn btn-success" do
                        %i.bi.bi-plus-circle.me-2
                        Start New Huddle
                      = link_to huddles_review_organization_path(@organization), class: "btn btn-outline-info" do
                        %i.bi.bi-graph-up.me-2
                        Huddles Review
            
            .card.mb-4{ role: "region", "aria-labelledby": "transform-section" }
              .card-header
                %h5.mb-0{ id: "transform-section" }
                  %i.bi.bi-graph-up.me-2
                  Transform
              .card-body
                .row
                  .col-md-8
                    .row.text-center
                      .col-12
                        .h4.text-secondary Coming Soon
                        %small.text-muted Growth metrics and outcomes tracking
                  .col-md-4.border-start.border-secondary
                    .d-grid.gap-2
                      .text-center.py-2
                        %small.text-muted Coming Soon
                      = link_to "#", class: "btn btn-outline-secondary", disabled: true do
                        %i.bi.bi-graph-up.me-2
                        View Growth Metrics
                      = link_to "#", class: "btn btn-outline-secondary", disabled: true do
                        %i.bi.bi-plus-circle.me-2
                        Track Outcomes
          


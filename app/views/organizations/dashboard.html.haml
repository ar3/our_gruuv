- content_for :header do
  %h1.mb-0 
    = @organization.display_name
    Dashboard

.container-fluid.py-4
  .row
    .col-12
      %p.text-muted Welcome to your #{@organization.display_name} dashboard!
  
  / 9 Pillar Boxes for OurGruuv
  .row.mt-4
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-primary.text-white
          %h5.mb-0
            %i.bi.bi-target.me-2
            Align :: Milestone
        .card-body.d-flex.flex-column
          %p.card-text Track milestone achievements and certifications
          .mt-auto
            = link_to "View Milestones", organization_abilities_path(@organization), class: "btn btn-primary"
    
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-info.text-white
          %h5.mb-0
            %i.bi.bi-check-circle.me-2
            Align :: Accountability
        .card-body.d-flex.flex-column
          %p.card-text Manage assignments and abilities
          .mt-auto
            = link_to "View Assignments", organization_assignments_path(@organization), class: "btn btn-info"
    
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-success.text-white
          %h5.mb-0
            %i.bi.bi-briefcase.me-2
            Align :: Position
        .card-body.d-flex.flex-column
          %p.card-text Manage positions and employment
          .mt-auto
            = link_to "View Positions", organization_positions_path(@organization), class: "btn btn-success"
  
  .row
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-warning.text-dark
          %h5.mb-0
            %i.bi.bi-lightbulb.me-2
            Collab :: Opportunities
        .card-body.d-flex.flex-column
          %p.card-text Create and manage opportunities
          .mt-auto
            = link_to "Coming Soon", good_issues_coming_soon_path, class: "btn btn-warning"
    
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-secondary.text-white
          %h5.mb-0
            %i.bi.bi-diagram-3.me-2
            Collab :: Diamond Decision
        .card-body.d-flex.flex-column
          %p.card-text Group decision-making methodology
          .mt-auto
            = link_to "Coming Soon", diverge_converge_coming_soon_path, class: "btn btn-secondary"
    
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-danger.text-white
          %h5.mb-0
            %i.bi.bi-people.me-2
            Collab :: Huddle
        .card-body.d-flex.flex-column
          %p.card-text Manage team huddles and feedback
          .mt-auto
            = link_to "View Huddles", huddles_path, class: "btn btn-danger"
  
  .row
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-dark.text-white
          %h5.mb-0
            %i.bi.bi-graph-up.me-2
            Transform :: Signals
        .card-body.d-flex.flex-column
          %p.card-text Team signals and metrics
          .mt-auto
            = link_to "Coming Soon", team_signals_coming_soon_path, class: "btn btn-dark"
    
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-light.text-dark
          %h5.mb-0
            %i.bi.bi-question-circle.me-2
            Transform :: Hypotheses
        .card-body.d-flex.flex-column
          %p.card-text Hypothesis management
          .mt-auto
            = link_to "Coming Soon", hypothesis_management_coming_soon_path, class: "btn btn-outline-dark"
    
    .col-md-4.mb-4
      .card.h-100
        .card-header.bg-primary.text-white
          %h5.mb-0
            %i.bi.bi-bullseye.me-2
            Transform :: OKR3s
        .card-body.d-flex.flex-column
          %p.card-text OKR3 methodology and tracking
          .mt-auto
            = link_to "Coming Soon", okr3_management_coming_soon_path, class: "btn btn-primary"
- content_for :title, "Select Observation Type"

- content_for :header do
  Select Observation Type

.container-fluid.py-4
  .row.g-4
    - return_params = {}
    - return_params[:return_url] = @return_url if @return_url.present?
    - return_params[:return_text] = @return_text if @return_text.present?

    .col-md-6
      .card.h-100.hover-lift{style: "cursor: pointer;", onclick: "window.location='#{new_kudos_organization_observations_path(@organization, return_params)}'"}
        .card-body.text-center.p-4
          %i.bi.bi-trophy.display-1.text-success.mb-3
          %h3 Kudos / Recognition
          %p.text-muted Celebrate wins, shoutouts, and positive behaviors
          %hr.my-3
          %small.text-muted
            %i.bi.bi-unlock.me-1
            Shared with team by default
            %br
            %i.bi.bi-images.me-1
            GIFs enabled
    
    .col-md-6
      .card.h-100.hover-lift{style: "cursor: pointer;", onclick: "window.location='#{new_feedback_organization_observations_path(@organization, return_params)}'"}
        .card-body.text-center.p-4
          %i.bi.bi-chat-left-text.display-1.text-warning.mb-3
          %h3 Feedback
          %p.text-muted Share actionable feedback using an OG spin on Non-Violent Communication
          %hr.my-3
          %small.text-muted
            %i.bi.bi-lock.me-1
            Private by default
            %br
            %i.bi.bi-file-text.me-1
            MAAP template included


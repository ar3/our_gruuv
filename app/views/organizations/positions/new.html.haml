- content_for :go_back_link do
  = link_to organization_positions_path(@organization), class: "go-back-link" do
    %i.bi.bi-arrow-left.me-2
    Back to Positions

.row.justify-content-center
  .col-lg-8
    .card
      .card-header
        %h4.mb-0
          %i.bi.bi-briefcase.me-2
          Create New Position
      
      .card-body
        = form_with model: [@organization, @position], url: organization_positions_path(@organization), local: true do |form|
          = render 'form', form: form
          
          .d-flex.justify-content-between
            = link_to "Cancel", organization_positions_path(@organization), class: "btn btn-secondary"
            = form.submit "Create Position", class: "btn btn-primary"

- dept = node[:department]
- children = node[:children]
- departments_count = node[:departments_count] || 0
- has_children = children.any?
- node_id = "dept-node-#{dept.id}"
- children_id = "dept-children-#{dept.id}"

.tree-node{id: node_id, style: "margin-left: #{depth * 40}px; margin-bottom: 10px;"}
  .d-flex.align-items-center
    - if depth > 0
      %i.bi.bi-arrow-return-right.me-2{style: "color: #999;"}
    .card{style: "width: 600px; position: relative;"}
      .card-body.p-2
        .d-flex.align-items-start
          .flex-grow-1
            - if has_children
              .d-flex.align-items-center.mb-2
                %button.btn.btn-sm.btn-link.p-0.me-2.toggle-children{type: "button", "data-bs-toggle": "collapse", "data-bs-target": "##{children_id}", "aria-expanded": "true", "aria-controls": children_id, style: "text-decoration: none; color: #666; min-width: 20px;"}
                  %i.bi.bi-chevron-down.toggle-icon
                %span.badge.bg-light.text-dark.small
                  - if departments_count > 0
                    #{pluralize(departments_count, 'department')} below
                  - else
                    No children
            - if policy(dept).show?
              = link_to organization_department_path(@organization, dept), class: "text-decoration-none fw-bold" do
                = dept.name
            - else
              %span.fw-bold= dept.name
            %br
            %span.badge.bg-primary{style: "font-size: 0.75rem;"}
              Department
            - if dept.archived?
              %span.badge.bg-secondary.ms-1{style: "font-size: 0.75rem;"}
                Archived
          .flex-shrink-0.ms-2
            .btn-group.btn-group-sm
              = link_to organization_department_path(@organization, dept), class: "btn btn-outline-primary" do
                %i.bi.bi-eye
              - if policy(dept).update?
                = link_to edit_organization_department_path(@organization, dept), class: "btn btn-outline-secondary" do
                  %i.bi.bi-pencil
              - if policy(dept).archive?
                = link_to archive_organization_department_path(@organization, dept), method: :patch, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to archive this department?" } do
                  %i.bi.bi-archive

- if has_children
  .collapse.show{id: children_id}
    - children.each do |child_node|
      = render 'organizations/departments/hierarchy_node', node: child_node, depth: depth + 1, organization: @organization

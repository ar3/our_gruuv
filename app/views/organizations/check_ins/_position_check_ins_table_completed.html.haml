-# Position Check-In Table View - Officially Completed State
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th Position
        %th Employee Rating
        %th Employee Notes
        %th Manager Rating
        %th Manager Notes
        %th Official Rating
        %th Status
    %tbody
      %tr
        %td
          = button_tag type: "submit", 
                       name: "redirect_to", 
                       value: organization_teammate_position_path(@organization, check_in.teammate),
                       "data-bs-toggle" => "popover", 
                       "data-bs-trigger" => "hover", 
                       "data-bs-placement" => "right", 
                       "data-bs-html" => "true", 
                       "data-bs-content" => latest_position_check_in_popover_content(check_in.teammate),
                       class: "btn btn-link text-decoration-none p-0 border-0 bg-transparent text-start" do
            = check_in.employment_tenure.position.display_name
            %i.bi.bi-clock-history.ms-1.text-muted
        %td
          = position_rating_display(check_in.employee_rating)
        %td
          = simple_format(check_in.employee_private_notes)
        %td
          = position_rating_display(check_in.manager_rating)
        %td
          = simple_format(check_in.manager_private_notes)
        %td
          = position_rating_display(check_in.official_rating)
        %td
          .badge.bg-success Finalized
          %br
          %small.text-muted Completed #{check_in.official_check_in_completed_at ? format_date_in_user_timezone(check_in.official_check_in_completed_at, format: '%m/%d/%Y') : ''}

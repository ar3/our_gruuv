.card.mb-4
  .card-header
    %h3 Assignment: #{check_in.assignment.title}
    = check_in_status_badge(check_in)

  .card-body
    - if check_in&.officially_completed?
      = render 'assignment_check_in_completed', check_in: check_in
    - elsif view_mode == :manager
      = render 'assignment_check_in_manager_view', check_in: check_in, form: form
    - elsif view_mode == :employee
      = render 'assignment_check_in_employee_view', check_in: check_in, form: form
    - else
      = render 'assignment_check_in_in_progress', check_in: check_in, form: form, view_mode: view_mode



/ Employee Section
.col-md-6
  .employee-section
    %h6.text-primary.mb-3
      %i.bi.bi-person.me-2
      Employee Assessment
    - if check_in.employee_completed_at.present?
      .completed-section
        %p.mb-1
          %strong Energy Level:
          = check_in.actual_energy_percentage&.to_s + '%' if check_in.actual_energy_percentage.present?
        %p.mb-1
          %strong Self Rating:
          = check_in.employee_rating&.humanize if check_in.employee_rating.present?
        %p.mb-1
          %strong Personal Alignment:
          = check_in.employee_personal_alignment&.humanize if check_in.employee_personal_alignment.present?
        %p.mb-1
          %strong Private Notes:
          = check_in.employee_private_notes if check_in.employee_private_notes.present?
        %small.text-muted
          Completed: #{check_in.employee_completed_at.strftime('%B %d, %Y at %l:%M %p')}
    - else
      .pending-section
        %p.text-muted
          %i.bi.bi-clock.me-2
          Employee assessment pending

-# Assignment Check-Ins Table View - Manager Show Complete Summary
%td{style: "display: none;"}
  = form.hidden_field :assignment_id, value: check_in.assignment_id
%td
  = assignment_rating_display(check_in.manager_rating)
%td
  = simple_format(check_in.manager_private_notes)
%td
  - other_mode = check_in.other_participant_display_mode(:manager)
  - partial_name = "assignment_check_ins_table_manager_#{other_mode}"
  = render partial_name, check_in: check_in
%td
  -# Hidden fields to preserve existing values when form is submitted
  = form.hidden_field :manager_rating, value: check_in.manager_rating
  = form.hidden_field :manager_private_notes, value: check_in.manager_private_notes
  
  .form-check
    = form.radio_button :status, 'complete', checked: true
    = form.label :status_complete, 'Ready for Finalization', class: 'form-check-label'
  .form-check
    = form.radio_button :status, 'draft'
    = form.label :status_draft, 'Make Changes', class: 'form-check-label'

  .small.text-muted.mt-1
    Select "Make Changes" to edit your assessment and notes


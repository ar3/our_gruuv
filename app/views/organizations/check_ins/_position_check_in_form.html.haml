.card.mb-4{data: {position_id: check_in.employment_tenure.position.id}}
  .card-header
    %h3 Position: #{@person.active_employment_tenure_for(@organization)&.position&.display_name}
    = check_in_status_badge(check_in)
  
  .card-body
    - if check_in&.officially_completed?
      = render 'position_check_in_completed', check_in: check_in
    - elsif view_mode == :manager
      = render 'position_check_in_manager_view', check_in: check_in, form: form
    - elsif view_mode == :employee
      = render 'position_check_in_employee_view', check_in: check_in, form: form
    - else
      = render 'position_check_in_in_progress', check_in: check_in, form: form, view_mode: view_mode

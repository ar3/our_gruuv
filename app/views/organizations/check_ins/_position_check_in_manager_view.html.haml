- if check_in&.manager_completed?
  -# Manager has completed their side
  .row
    .col-md-8
      .card.border-primary
        .card-header.bg-primary.text-white
          %h5.mb-0 Your Assessment
        .card-body
          %p.mb-2
            %strong Rating:
            = position_rating_display(check_in.manager_rating)
          %p.mb-0
            %strong Notes:
            = simple_format(check_in.manager_private_notes)
    
    .col-md-4
      - if check_in&.employee_completed?
        .card.border-info
          .card-header.bg-info.text-white
            %h5.mb-0 Status
          .card-body.text-center
            %p.mb-3 #{@person.first_name} completed #{time_ago_in_words(check_in.employee_completed_at)} ago
            = link_to "Go to Finalization", organization_person_finalization_path(@organization, @person), 
                      class: 'btn btn-success btn-sm',
                      data: { confirm: 'Are you ready to finalize this check-in? This will create the official rating.' }
      - else
        .card.border-warning
          .card-header.bg-warning.text-dark
            %h5.mb-0 Status
          .card-body.text-center
            %p.mb-0 #{@person.first_name} has to complete their self-assessment
  
  .form-group.mt-3
    %label Status
    = form.fields_for :position_check_in, check_in do |pf|
      .btn-group-vertical{role: "group", "aria-label": "Status selection"}
        = pf.radio_button :status, 'draft', checked: !check_in.manager_completed?, class: 'btn-check', id: "position_manager_status_draft_#{check_in.id}"
        = pf.label :status_draft, 'Make Changes', class: 'btn btn-outline-secondary', for: "position_manager_status_draft_#{check_in.id}"
        = pf.radio_button :status, 'complete', checked: check_in.manager_completed?, class: 'btn-check', id: "position_manager_status_complete_#{check_in.id}"
        = pf.label :status_complete, 'Ready for Finalization', class: 'btn btn-outline-primary', for: "position_manager_status_complete_#{check_in.id}"
    
    .small.text-muted.mt-1
      Select "Make Changes" to edit your assessment and notes

- else
  -# Manager has not completed their side - show the form
  = render 'position_check_in_in_progress', check_in: check_in, form: form, view_mode: :manager

/ Manager Section
.col-md-6
  .manager-section
    %h6.text-success.mb-3
      %i.bi.bi-person-check.me-2
      Manager Assessment
    - if check_in.manager_completed_at.present?
      .completed-section
        %p.mb-1
          %strong Manager Rating:
          = check_in.manager_rating&.humanize if check_in.manager_rating.present?
        - if @is_manager
          %p.mb-1
            %strong Private Notes:
            = check_in.manager_private_notes if check_in.manager_private_notes.present?
        - else
          %p.mb-1
            %strong Private Notes:
            %span.text-muted <only visible by managers>
        %small.text-muted
          Completed: #{check_in.manager_completed_at.strftime('%B %d, %Y at %l:%M %p')}
    - else
      .pending-section
        %p.text-muted
          %i.bi.bi-clock.me-2
          Manager assessment pending

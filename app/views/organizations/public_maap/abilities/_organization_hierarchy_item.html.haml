- org = item[:organization]
- level = item[:level]
- children = item[:children]
- org_abilities = abilities_by_org[org] || []

- if org_abilities.any? || children.any?
  %div{style: "margin-left: #{level * 20}px;"}
    - if org_abilities.any?
      %h6.mb-3
        - if level > 0
          %i.bi.bi-arrow-return-right.me-2.text-muted
        = org.name
      %ul.list-unstyled.ms-3
        - org_abilities.each do |ability|
          %li.mb-2
            = link_to ability.name, organization_public_maap_ability_path(organization, ability), class: "text-decoration-none"
    
    - children.each do |child_item|
      = render 'organization_hierarchy_item', item: child_item, abilities_by_org: abilities_by_org, organization: organization


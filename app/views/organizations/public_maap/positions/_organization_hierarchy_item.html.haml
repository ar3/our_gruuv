- org = item[:organization]
- level = item[:level]
- children = item[:children]
- org_positions = positions_by_org[org] || []

- if org_positions.any? || children.any?
  %div{style: "margin-left: #{level * 20}px;"}
    - if org_positions.any?
      %h6.mb-3
        - if level > 0
          %i.bi.bi-arrow-return-right.me-2.text-muted
        = org.name
      %ul.list-unstyled.ms-3
        - org_positions.each do |position|
          %li.mb-2
            = link_to position.display_name, organization_public_maap_position_path(organization, position), class: "text-decoration-none"
    
    - children.each do |child_item|
      = render 'organization_hierarchy_item', item: child_item, positions_by_org: positions_by_org, organization: organization



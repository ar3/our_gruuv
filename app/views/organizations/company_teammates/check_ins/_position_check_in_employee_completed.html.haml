.alert.alert-success.mb-3
  %i.bi.bi-check-circle.me-2
  %strong Your assessment is complete and ready for manager review

.row
  .col-md-6
    .card.border-primary
      .card-header.bg-primary.text-white
        %h5.mb-0 Your Assessment
      .card-body
        = render 'shared/check_ins_and_finalizations/position_employee_perspective', check_in: check_in
  
  .col-md-6
    .card.border-info
      .card-header.bg-info.text-white
        %h5.mb-0 Manager Perspective
      .card-body
        - if check_in.manager_completed?
          %p.mb-2
            %strong Rating:
            = position_rating_display(check_in.manager_rating)
          %p.mb-0
            %strong Notes:
            = simple_format(check_in.manager_private_notes)
        - else
          %p.text-muted Waiting for your manager to complete their assessment

.form-group.mt-3
  %label Status
  = form.fields_for :position_check_in, check_in do |pf|
    .btn-group-vertical{role: "group", "aria-label": "Status selection"}
      = pf.radio_button :status, 'draft', checked: !check_in.employee_completed?, class: 'btn-check', id: "position_employee_completed_card_status_draft_#{check_in.id}"
      = pf.label :status_draft, 'Make Changes', class: 'btn btn-outline-secondary', for: "position_employee_completed_card_status_draft_#{check_in.id}"
      = pf.radio_button :status, 'complete', checked: check_in.employee_completed?, class: 'btn-check', id: "position_employee_completed_card_status_complete_#{check_in.id}"
      = pf.label :status_complete, 'Ready for Manager', class: 'btn btn-outline-primary', for: "position_employee_completed_card_status_complete_#{check_in.id}"
  
  .small.text-muted.mt-1
    Select "Make Changes" to edit your assessment and notes

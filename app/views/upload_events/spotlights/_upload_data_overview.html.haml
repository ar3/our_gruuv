/ Spotlight Section
.row.justify-content-center.mb-4
  .col-lg-12
    .card.border-0.shadow-sm
      .card-body
        .row
          .col-md-8
            .row.text-center
              .col-3
                .h3.text-primary= @spotlight_stats[:total_uploads]
                %small.text-muted Total Uploads
              .col-3
                .h3.text-success= @spotlight_stats[:completed_uploads]
                %small.text-muted Completed
              .col-3
                .h3.text-warning= @spotlight_stats[:ready_for_preview]
                %small.text-muted Ready for Preview
              .col-3
                .h3.text-info= @spotlight_stats[:recent_uploads]
                %small.text-muted Recent (7 days)
            .row.mt-3
              .col-12
                %h6.text-muted.mb-2 Upload Types
                .row
                  .col-6
                    .d-flex.align-items-center
                      %span.badge.bg-primary.me-2= @spotlight_stats[:assignment_checkins]
                      %small Assignment Check-Ins
                  .col-6
                    .d-flex.align-items-center
                      %span.badge.bg-success.me-2= @spotlight_stats[:employee_uploads]
                      %small Employee Positions
          .col-md-4
            .text-center
              - if @spotlight_stats[:ready_for_preview] > 0
                .alert.alert-warning.small
                  %i.bi.bi-clock.me-2
                  %strong #{@spotlight_stats[:ready_for_preview]} uploads ready for processing
              - elsif @spotlight_stats[:completed_uploads] > 0
                .alert.alert-success.small
                  %i.bi.bi-check-circle.me-2
                  %strong All uploads processed successfully
              - else
                .alert.alert-info.small
                  %i.bi.bi-info-circle.me-2
                  %strong No uploads yet - create your first upload
      .card-footer.bg-light
        .row.align-items-center
          .col-md-6
            %small.text-muted
              %i.bi.bi-funnel.me-1
              Filters: None applied
              %br
              %i.bi.bi-sort-down.me-1
              Sort: Newest first
          .col-md-6.text-end
            %small.text-muted
              %i.bi.bi-table.me-1
              View: Table format
              %br
              %i.bi.bi-eye.me-1
              Spotlight: Upload Data Overview
